public class Employee {
	public String name;
	public Employee(String name){
		this.name=name;
	}
	public void setName(String employee){
		this.name=employee;
	}
	
	public String getName() {
		return name;
	}
		
	public double weeklyPay(int hoursWorked){
		
		return 0;
		
	}
	}

